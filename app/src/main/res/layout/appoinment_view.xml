<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cardView1">

    <RelativeLayout
        android:id="@+id/appoint_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lines"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_7dp"/>

        <TextView
            android:id="@+id/patients_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lines"
            android:text="Patients Detail"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/patient_profile_photo"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_90dp"
            android:layout_below="@+id/patients_detail"
            android:src="@drawable/profile_photo"
            android:layout_marginTop="@dimen/size_17dp"
            android:layout_marginStart="@dimen/size_15dp"/>

        <TextView
            android:id="@+id/patient_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_profile_photo"
            android:layout_marginTop="@dimen/size_25dp"
            android:text="Vekariya"
            android:layout_below="@+id/patients_detail"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"/>

        <TextView
            android:id="@+id/patient_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_firstname"
            android:layout_marginTop="@dimen/size_25dp"
            android:text="Nayan"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_15dp"
            android:layout_below="@+id/patients_detail"
            android:layout_marginStart="@dimen/size_1dp"
            android:layout_marginEnd="@dimen/size_5dp"/>

        <TextView
            android:id="@+id/mobileno_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_profile_photo"
            android:layout_below="@+id/patient_lastname"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_7dp"
            android:text="Mobile No."
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/mobileno_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mobileno_txt"
            android:layout_below="@+id/patient_lastname"
            android:layout_marginStart="@dimen/size_1dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_7dp"
            android:text="9510925758"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/birthdate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_profile_photo"
            android:layout_below="@+id/mobileno_patient"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="Birthdate :"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/birthdate_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/birthdate_txt"
            android:layout_below="@+id/mobileno_patient"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginStart="@dimen/size_1dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="12/07/2000"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/Appoint_doctor_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patient_profile_photo"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="Appoint Doctor Detail"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_profile_photo"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_90dp"
            android:layout_below="@+id/Appoint_doctor_detail"
            android:src="@drawable/profile_photo"
            android:layout_marginTop="@dimen/size_17dp"
            android:layout_marginStart="@dimen/size_15dp"/>

        <TextView
            android:id="@+id/doctorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/doctor_profile_photo"
            android:layout_marginTop="@dimen/size_20dp"
            android:text="Dr.Harshvardhan ramani"
            android:layout_below="@+id/Appoint_doctor_detail"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"/>

        <TextView
            android:id="@+id/appoint_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/doctor_profile_photo"
            android:layout_below="@+id/doctorname"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_7dp"
            android:text="Appoint Date :"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/appoint_date_fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/appoint_date"
            android:layout_below="@+id/doctorname"
            android:layout_marginStart="@dimen/size_1dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_7dp"
            android:text="9510925758"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_profile_photo"
            android:layout_below="@+id/appoint_date_fix"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="Time :"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/timebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/time_txt"
            android:layout_below="@+id/appoint_date_fix"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginStart="@dimen/size_1dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="8:00 to 6:00"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/type_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_profile_photo"
            android:layout_below="@+id/timebook"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="Type :"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/type_txt"
            android:layout_below="@+id/timebook"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginStart="@dimen/size_1dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="orthopatic"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <RelativeLayout
            android:id="@+id/deleterelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginStart="@dimen/size_30dp"
            android:layout_marginEnd="@dimen/size_30dp">

            <ImageView
                android:id="@+id/deleteButton1"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:src="@drawable/delete"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/update_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginStart="@dimen/size_30dp"
            android:gravity="right"
            android:layout_marginEnd="@dimen/size_30dp">

            <ImageView
                android:id="@+id/updateButton1"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_45dp"
                android:src="@drawable/update"/>


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>