<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content"
    android:id="@+id/cardView">

    <RelativeLayout
        android:id="@+id/blood_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/patient_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name :"
            android:gravity="left"
            android:layout_marginTop="@dimen/size_5dp"
            android:textColor="@color/intro_desription_color"
            android:layout_marginStart="@dimen/size_15dp"
            android:textSize="@dimen/size_14dp"
            android:fontFamily="@font/montserratmedium"
            />

        <TextView
            android:id="@+id/patient_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/patient_txt"
            android:layout_marginStart="@dimen/size_5dp"
            android:text="Niketan Savaliya"
            android:gravity="right"
            android:layout_marginTop="@dimen/size_5dp"
            android:textColor="@color/tab_indicator_grey"
            android:layout_marginEnd="@dimen/size_15dp"
            android:fontFamily="@font/montserratmedium"
            android:textSize="@dimen/size_14dp"
            />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID :"
            android:gravity="left"
            android:textColor="@color/intro_desription_color"
            android:layout_marginStart="@dimen/size_15dp"
            android:textSize="@dimen/size_14dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:fontFamily="@font/montserratmedium"
            android:layout_below="@+id/patient_txt"/>

        <TextView
            android:id="@+id/email_id_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/email_txt"
            android:layout_marginStart="@dimen/size_5dp"
            android:text="vekariyanayan2000@gmail.com"
            android:layout_below="@+id/patient_name_txt"
            android:layout_marginTop="@dimen/size_5dp"
            android:gravity="right"
            android:textColor="@color/tab_indicator_grey"
            android:layout_marginEnd="@dimen/size_15dp"
            android:fontFamily="@font/montserratmedium"
            android:textSize="@dimen/size_14dp"
            />

        <TextView
            android:id="@+id/mobiletxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No :"
            android:gravity="left"
            android:textColor="@color/intro_desription_color"
            android:layout_marginStart="@dimen/size_15dp"
            android:textSize="@dimen/size_14dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:fontFamily="@font/montserratmedium"
            android:layout_below="@+id/email_id_txt"/>

        <TextView
            android:id="@+id/mobileno_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/email_txt"
            android:layout_marginStart="@dimen/size_5dp"
            android:text="9510925758"
            android:layout_below="@+id/email_id_txt"
            android:layout_marginTop="@dimen/size_5dp"
            android:gravity="right"
            android:textColor="@color/tab_indicator_grey"
            android:layout_marginEnd="@dimen/size_15dp"
            android:fontFamily="@font/montserratmedium"
            android:textSize="@dimen/size_14dp"
            />

        <TextView
            android:id="@+id/gendtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:gravity="left"
            android:textColor="@color/intro_desription_color"
            android:textSize="@dimen/size_14dp"
            android:fontFamily="@font/montserratmedium"
            android:layout_below="@+id/mobileno_txt"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginStart="@dimen/size_15dp"/>

        <TextView
            android:id="@+id/bloodtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:gravity="center"
            android:textColor="@color/intro_desription_color"
            android:textSize="@dimen/size_14dp"
            android:fontFamily="@font/montserratmedium"
            android:layout_below="@+id/mobileno_txt"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginStart="@dimen/size_15dp"/>

        <TextView
            android:id="@+id/agestxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:gravity="right"
            android:textColor="@color/intro_desription_color"
            android:textSize="@dimen/size_14dp"
            android:fontFamily="@font/montserratmedium"
            android:layout_below="@+id/mobileno_txt"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"/>


        <TextView
            android:id="@+id/gendertxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agestxt"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:gravity="left"
            android:text="Male"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/tab_indicator_grey"
            android:textSize="@dimen/size_13dp"
            />

        <TextView
            android:id="@+id/bloodgrouptxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bloodtxt"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:gravity="center"
            android:text="AB+"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/tab_indicator_grey"
            android:textSize="@dimen/size_13dp"
            />

        <TextView
            android:id="@+id/agetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bloodtxt"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp"
            android:gravity="right"
            android:text="21"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/tab_indicator_grey"
            android:textSize="@dimen/size_13dp"
            />

        <RelativeLayout
            android:id="@+id/deleterelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agetxt"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginStart="@dimen/size_30dp"
            android:layout_marginEnd="@dimen/size_30dp">

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:src="@drawable/delete"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/update_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/agetxt"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginStart="@dimen/size_30dp"
            android:gravity="right"
            android:layout_marginEnd="@dimen/size_30dp">

            <ImageView
                android:id="@+id/updateButton"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_45dp"
                android:src="@drawable/update"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lines"
            android:layout_below="@+id/update_relative"
            android:layout_marginStart="@dimen/size_5dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_7dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>